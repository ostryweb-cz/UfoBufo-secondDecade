{
  "name": "autoid-website",
  "version": "0.0.2",
  "description": "UfoBufo website with optimized JavaScript bundles",
  "author": "borutak",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress",
    "build:dev": "cross-env NODE_ENV=development webpack --progress",
    "dev": "cross-env NODE_ENV=development webpack --watch",
    "dist": "cross-env NODE_ENV=production webpack --config webpack.config.dist.js --progress",
    "dist:dev": "cross-env NODE_ENV=development webpack --config webpack.config.dist.js --progress",
    "dist:clean": "rimraf dist",
    "dist:package": "npm run dist && cd dist && tar -czf UfoBufo-secondDecade-$(date +%Y%m%d).tar.gz UfoBufo-secondDecade && echo 'Theme packaged: dist/UfoBufo-secondDecade-*.tar.gz'",
    "deploy": "npm run dist && echo '\nâœ… Theme ready for deployment in: ./dist/UfoBufo-secondDecade/\nðŸ“‹ Copy to WordPress: /wp-content/themes/'"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^10.0.0",
    "bundlesize": "^0.18.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "core-js": "^3.31.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "mini-css-extract-plugin": "^2.9.4",
    "rimraf": "^5.0.1",
    "sass": "^1.93.2",
    "sass-loader": "^16.0.5",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "basicscroll": "^3.0.4",
    "gsap": "^3.13.0",
    "izimodal": "^1.6.1",
    "jquery": "^3.7.1",
    "swiper": "^12.0.2"
  },
  "bundlesize": [
    {
      "path": "js/front.js",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
